{
  "manifest_version": 3,
  "name": "Jobez",
  "version": "1.0",
  "description": "Empowering job search.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "contextMenus", "tabs", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
